<Window x:Class="StudioManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudioManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding StaffList}" AutoGenerateColumns="False" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdEmployee}"/>
                <DataGridTextColumn Header="Department ID" Binding="{Binding IdDepartment}"/>
                <DataGridTextColumn Header="Full Name" Binding="{Binding Employeefullname}"/>
                <DataGridTextColumn Header="Phone Number" Binding="{Binding Employeephonenumber}"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Employeeemail}"/>
                <DataGridTextColumn Header="Position" Binding="{Binding Employeeposition}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
